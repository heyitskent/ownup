
 <div class="masterheader">
  <%= link_to 'ownUp', root_path %>
 </div>
 
 <% if notice %>
  <div class="buyer_wrong_login">
   <h1><%= notice %></h1>
   <% end %>
  </div>

 <div class="buyer_login">
  <h2>welcome back!</h2>
  <%= form_tag login_path, method: 'post' do %>
  
   <div>
    <label>
     email: <%= text_field_tag :email %>
    </label>
   </div>

   <div>
    <label>
     password: <%= password_field_tag :password %>
    </label>
   </div>

   <%= submit_tag "Log in" %>
  <% end %>
 </div>

<div class="masterfooter">
 <div>
  <p> about us | terms and conditions | careers</p>
 </div>
</div>